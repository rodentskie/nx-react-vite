{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@practera-badges/library/delay": ["library/delay/src/index.ts"],
      "@practera-badges/library/parse-csv": ["library/parse-csv/src/index.ts"],
      "@practera-badges/library/types": ["library/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
